@model IEnumerable<SharedLibrary.Models.CategoryModel>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create"><button class="btn btn-primary">Create Category</button></a>
</p>
<table id="myTable2" class="table table-bordered table-hover table-sm">
    <thead>
        <tr>
            <th type="hidden">
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            
            <th data-sortable="false" width="500px"> Operations</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId"> <button type="button" class="btn btn-primary" data-toggle="modal" data-target="@("#editCategory"+item.CategoryId)" data-url="@Url.Action($"Edit/{item.CategoryId}")">Edit</button> @await Html.PartialAsync("_EditPartialView",item) </a> |
                    
                    @*<a asp-action="Details" asp-route-id="@item.CategoryId"><button class="btn btn-warning">Details</button></a> |*@
                    <a asp-action="Delete" asp-route-id="@item.CategoryId"> <button type="button" class="btn btn-danger" data-toggle="modal" data-target="@("#deleteCategory"+item.CategoryId)" data-url="@Url.Action($"Delete/{item.CategoryId}")">Delete</button> @await Html.PartialAsync("_EditPartialView",item)</a>
            </td>
        </tr>
}
    </tbody>
</table>
