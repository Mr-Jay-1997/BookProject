@model SharedLibrary.Models.CategoryModel;


<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="deleteCategory-@Model.CategoryId" role="dialog" aria-labelledby="deleteCategoryLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteCategoryLabel">Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @*<label asp-for="CategoryId"  class="control-label"></label>*@
                        <input asp-for="CategoryId" type="hidden" placeholder="Enter Category Id" class="form-control"/>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" placeholder="Enter Category Name" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <br />
                    @*<div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    </div>*@
                    <br />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Delete Category</button>
            </div>
        </div>
    </div>
</div>